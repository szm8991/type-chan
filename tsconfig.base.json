{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
